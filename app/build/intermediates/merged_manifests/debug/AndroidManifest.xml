<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azhar.indonews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="33" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
>
        <activity
            android:name="com.azhar.indonews.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.azhar.indonews.OpenNewsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.azhar.indonews.EntertaimentActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.azhar.indonews.HeadLineActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.azhar.indonews.HealthActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.azhar.indonews.BusinessActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.azhar.indonews.SportsNewsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.azhar.indonews.TechnologyActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>